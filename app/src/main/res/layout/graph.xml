<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelaGraph"
    android:orientation="vertical"
    android:weightSum="3">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="2.6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type OF Graph"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/TxtTypeGraph"
            />
     <Spinner
         android:id="@+id/SpinnerGraph"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/TxtTypeGraph"
         android:layout_toEndOf="@+id/TxtTypeGraph"
         android:layout_marginLeft="20dp"
         />
 </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:id="@+id/FragRelaGraph"
        android:layout_marginBottom="5dp"/>



</LinearLayout>

